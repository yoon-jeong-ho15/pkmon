{
  "manifest_version": 3,
  "name": "PacketMon",
  "version": "1.0.0",
  "description": "웹 브라우징 중 만나는 디지털 몬스터!",

  "permissions": ["storage", "tabs", "webNavigation", "notifications"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "index.html",
    "default_title": "PacketMon"
  }
}
